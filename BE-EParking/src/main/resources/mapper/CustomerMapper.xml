<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eparking.eparking.dao.CustomerMapper">

    <select id="findCustomerByPhoneNumber" resultType="com.eparking.eparking.domain.Customer">
        SELECT
            phoneCustomer,
            password,
            customerName,
            email
        FROM Customer
        where phoneCustomer = #{phoneNumber};
    </select>

    <select id="findResponseCustomerByPhone" resultType="com.eparking.eparking.domain.response.ResponseCustomer">
        SELECT
            phoneCustomer,
            customerName,
            email
        FROM Customer
        where phoneCustomer = #{phoneNumber};
    </select>
</mapper>